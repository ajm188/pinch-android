<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context="com.pinch_in.pinch.EventFragment"
    android:layout_weight="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_show"
        android:weightSum="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_show_pic"
            android:scaleType="fitStart"
            android:src="@drawable/event_placeholder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/event_show_title"
            style="@style/PinchTheme.LargeText"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_margin="4dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/event_show_description"
            style="@style/PinchTheme.MedSmallText"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_margin="4dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When?"
            android:id="@+id/textView"
            android:layout_marginTop="12dip"
            style="@style/PinchTheme.MediumText"
            android:layout_marginLeft="4dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/event_show_time"
            android:layout_marginLeft="2dip" />

    </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffff0003"
        android:layout_marginTop="16dip"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:id="@+id/event_signup"
            android:background="#ffff1418"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dip"
            android:textAlignment="center"
            android:layout_weight="0.63"
            android:layout_centerInParent="true"
            android:textSize="25dp" />
    </RelativeLayout>
</LinearLayout>
